@model ControleEmprestimo.Data.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<h1 align="center">Detalhes dos clientes</h1>
<div>
    <h4>Verifique os detalhes dos cliente</h4>
    <hr />

    <div>
        <a class="btn btn-primary" asp-action="Index">Voltar a Cliente</a>
        <a class="btn btn-danger" asp-action="Edit" asp-route-id="@Model.Id">Alterar Detalhes do Cliente</a>
    </div>

    <div class="row">
        <div class="col-md">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div hidden class="form-group col-md">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                </div>

                <div class="card">
                    <div align="center" style="position:center; font-style:normal;font-size:26px; background-color:aliceblue;" class="card-header"><h4>Dados Pessoais</h4></div>
                    <div class="card-body row">
                        @*colaca um formulario na frente do outro*@
                        <div class="col-md">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.CliCpf)</label>
                                <input disabled class="form-control" value="@Html.DisplayFor(model => model.CliCpf)" />
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.CliNome)</label>
                                <input disabled class="form-control" value=" @Html.DisplayFor(model => model.CliNome)" />
                            </div>
                        </div>
                    </div>
                </div>
                <br />

                <div class="card">
                    <div align="center" style="position:center; font-style:normal;font-size:26px; background-color:aliceblue;" class="card-header"><h4>Endereço</h4></div>
                    <div class="card-body row">
                        @*colaca um formulario na frente do outro*@
                        <div class="col-md">
                            <div class="form-group">
                                <label> @Html.DisplayNameFor(model => model.CliCidade)</label>
                                <input disabled class="form-control" value=" @Html.DisplayFor(model => model.CliCidade)" />
                            </div>
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.CliBairro)</label>
                                <input disabled class="form-control" value="@Html.DisplayFor(model => model.CliBairro)" />
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="form-group">
                                <label> @Html.DisplayNameFor(model => model.CliEndereco)</label>
                                <input disabled class="form-control" value="@Html.DisplayFor(model => model.CliEndereco)" />
                            </div>
                            <div class="form-group">
                                <label> @Html.DisplayNameFor(model => model.CliNumero)</label>
                                <input disabled class="form-control" value=" @Html.DisplayFor(model => model.CliNumero)" />
                            </div>
                        </div>
                    </div>
                </div>
                <br />

                <div class="card">
                    <div align="center" style="position:center; font-style:normal;font-size:26px; background-color:aliceblue;" class="card-header"><h4>Contatos Pessoais</h4></div>
                    <div class="card-body row">
                        @*colaca um formulario na frente do outro*@
                        <div class="col-md">
                            <div class="form-group">
                                <label> @Html.DisplayNameFor(model => model.CliTelefoneCelular)</label>
                                <input disabled class="form-control" value=" @Html.DisplayFor(model => model.CliTelefoneCelular)" />
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="form-group">
                                <label> @Html.DisplayNameFor(model => model.CliTelefoneFixo)</label>
                                <input disabled class="form-control" value=" @Html.DisplayFor(model => model.CliTelefoneFixo)" />
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>
